
" Create our backup and swap file dir
silent !mkdir -p ~/.vim/tmp > /dev/null 2>&1

set nocompatible

filetype indent plugin on

syntax on

set hidden

set wildmenu

set showcmd

set hlsearch

set ignorecase
set smartcase

set backspace=indent,eol,start

set autoindent

set nostartofline

set ruler

set laststatus=2

set confirm

set visualbell

set t_vb=

set mouse=a

set cmdheight=2

set number

set shiftwidth=4
set softtabstop=4
set expandtab

map Y y$

nnoremap <C-L> :nohl<CR><C-L>

set undofile
set undodir=~/.vim/tmp
set undolevels=1000
set undoreload=10000

" Move all swap files out of the way
" See http://stackoverflow.com/questions/1636297/how-to-change-the-folder-path-for-swp-files-in-vim
set directory=~/.vim/tmp//
set dir=~/.vim/tmp//
set backupdir=~/.vim/tmp//

